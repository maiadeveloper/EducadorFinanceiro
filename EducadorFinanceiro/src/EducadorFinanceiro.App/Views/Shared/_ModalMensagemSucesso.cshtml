@if (TempData["MensagemSucesso"] != null)
{
    <!-- Inicio Modal -->
    <div class="modal fade" id="modalMensagemSucesso" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header-customizado">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <span class="fa fa-check-circle fa-5x text-success"></span>
                    <h3 style="margin-top:20px;">@TempData["MensagemSucesso"]</h3>
                </div>
                <div class="modal-footer-customizado">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Fim Modal -->
}
